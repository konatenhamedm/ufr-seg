  <body style="font-size:12px;">
    {% set max_copie = 3 %}
    {# {% set current_societe = _sw_twig.currentSociete(['libelle']) %} #}
    {% for i in 1..max_copie %}
      <div>
        <table style="width:100%">
          <thead>
            <tr>
             
               <tr>
              <td style="width:50%; height:80px">
                <img src="{{ asset('assets/media/logos/logo.png') }}" height="60" alt="" style="margin-left:-14px;" />
              </td>
               <td style="width:50%;vertical-align:middle;text-align:right;">
                    <h2>RECU DE VERSEMENT</h2>
                    
                </td>
            </tr>
            </tr>
            <tr>
             
            </tr>
          </thead>
        </table>
        <table style="width:100%">
           
        </table>
        
        <table style="width:100%; style:font-style:italic; margin-top:20px; font-size:8px;">
          <tr>
            <td style="width:50%;text-align:left">
              <i>UFR-SEG | Copie
                {{i}}
                / {{ max_copie }}</i>
            </td>
            <td style="width:50%;text-align:right;">
              <i>Editée le
                {{ 'now' | date('d/m/Y à H:i:s') }} par {{ app.user.nomComplet }}</i>
            </td>
          </tr>
        </table>
        {% if not loop.last %}
        <hr style="border-bottom:1px dotted #000">
        {% endif %}
      </div>
