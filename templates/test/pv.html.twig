                            {% if cpteInvalide > 0 %}
                              0
                            {% else %}
                              {% if total/nbre >= 10 %}
                               {{ue.coef}}
                              {% else %}
                               0
                              {% endif %}
                            {% endif %}
                           
                            </td>
                            <td style="text-align:center">

                            {% if cpteInvalide > 0 %}
                              AJ
                            {% else %}
                              {% if total/nbre >= 10 %}
                                VAL
                              {% else %}
                                AJ
                              {% endif %}
                            {% endif %}
                          
                            </td>
                          

