
{% macro colonne(colonne) %}
    <div class="row-colonne_stage my-3 py-2" style="border-bottom:3px solid #000">
        {#{{ dump(redaction.children.path.vars.data) }}#}
        <div class="row">
            <div class="col-md-2 ">
                {{ form_row(colonne.libelle) }}
            </div>
            <div class="col-md-1 ">
                {{ form_row(colonne.employeur) }}
            </div>
            <div class="col-md-2 ">
                {{ form_row(colonne.contact) }}
            </div>
            <div class="col-md-2 ">
                {{ form_row(colonne.dateDebut) }}
            </div> <div class="col-md-2 ">
                {{ form_row(colonne.dateFin) }}
            </div> <div class="col-md-2 ">
                {{ form_row(colonne.activite) }}
            </div>
            <div class="col-md-1 del-col_stage" data-parent=".row-colonne_stage"></div>
        </div>
    </div>

{% endmacro  %}


{% macro prototype_ligne_colonne_stage(form) %}
    <div class="list-colonne_stage"  data-prototype="{{ _self.colonne(form.stages.vars.prototype)|e }}"></div>
    <button type="button" data-protoname="__name__" class="btn btn-default add_line_stage btn-xs" id="add_ligne_stage"  data-protoclass=".list-colonne_stage" data-container=".column-container_stage">
        <i class="fa fa-plus"></i> Ajouter une ligne
    </button>
    <div class="column-container_stage proto-container_stage" data-childclass="">
        {% for item in form.stages %}
            {{ _self.colonne(item|e) }}
        {% endfor %}
    </div>
{% endmacro %}