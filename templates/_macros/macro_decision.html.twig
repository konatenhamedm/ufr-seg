
{% macro colonne(colonne) %}
    <div class="row-colonne_document  my-3 py-2" >
        {#{{ dump(redaction.children.path.vars.data) }}#}
        <div class="row">
            <div class="col-md-4 " >
            <label for="date">Date</label>
                 <span style="display:none">{{ form_row(colonne.dateCreation,{attr:{'readonly':'readonly',"type":"hidden"}}) }}</span>

                 {% if  colonne.vars.value and colonne.vars.value.dateCreation is not null %}
                  <input type="text" class="form-control form-control-sm" value="{{ colonne.vars.value.dateCreation | date('d/m/y')}}" readonly/>
                 {% endif %}
                 
            </div>
            <div class="col-md-4 ">
                {{ form_row(colonne.utilisateur,{attr:{'readonly':'readonly'}}) }}
            </div>
            <div class="col-md-4 ">
                {{ form_row(colonne.decision) }}
            </div>
            
        </div>

        <div class="row">
             <div class="col-md-12 ">
                 {{ form_row(colonne.commentaire) }}
            </div>
        </div>
    </div>

{% endmacro  %}

{% macro prototype_ligne_colonne_decision(form) %}
    <div class="list-colonne_document"  data-prototype="{{ _self.colonne(form.decisions.vars.prototype)|e }}"></div>
    {# <button type="button" data-protoname="__name__" class="btn btn-default add_line_document btn-xs" id="add_ligne_document"  data-protoclass=".list-colonne_document" data-container=".column-container_document">
        <i class="fa fa-plus"></i> Ajouter une ligne
    </button> #}
    <div class="column-container_document proto-container_document" data-childclass="">
        {% for item in form.decisions  %}
            {{ _self.colonne(item|e) }}
        {% endfor %}
    </div>
{% endmacro %}

