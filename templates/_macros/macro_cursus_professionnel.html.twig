
{% macro colonne(colonne) %}
    <div class="row-colonne_professionnel  my-3 py-2" style="border-bottom:3px solid #000">
        {#{{ dump(redaction.children.path.vars.data) }}#}
        <div class="row">
            <div class="col-md-2 ">
                {{ form_row(colonne.emploi) }}
            </div>
            <div class="col-md-1 ">
                {{ form_row(colonne.employeur) }}
            </div>
            <div class="col-md-2 ">
                {{ form_row(colonne.contact) }}
            </div>
            <div class="col-md-2 ">
                {{ form_row(colonne.dateDebut) }}
            </div> <div class="col-md-2 ">
                {{ form_row(colonne.dateFin) }}
            </div> <div class="col-md-2 ">
                {{ form_row(colonne.activite) }}
            </div>
            <div class="col-md-1 del-col_professionnel" data-parent=".row-colonne_professionnel"></div>
        </div>
    </div>

{% endmacro  %}


{% macro prototype_ligne_colonne_professionnel(form) %}
    <div class="list-colonne_professionnel"  data-prototype="{{ _self.colonne(form.cursusProfessionnels.vars.prototype)|e }}"></div>
    <button type="button" data-protoname="__name__" class="btn btn-default add_line_professionnel btn-xs" id="add_ligne_professionnel"  data-protoclass=".list-colonne_professionnel" data-container=".column-container_professionnel">
        <i class="fa fa-plus"></i> Ajouter une ligne
    </button>
    <div class="column-container_professionnel proto-container_professionnel" data-childclass="">
        {% for item in form.cursusProfessionnels %}
            {{ _self.colonne(item|e) }}
        {% endfor %}
    </div>
{% endmacro %}